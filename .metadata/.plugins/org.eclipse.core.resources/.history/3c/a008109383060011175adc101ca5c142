/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
static uint8_t IFLASH_Write_Buffer[16];
static uint8_t IFLASH_Read_Buffer[16];
static uint8_t UART_Tx_Buffer[] = "UART TEST OK\r\n";
static uint8_t Serial_CMD = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
/* USER CODE BEGIN PFP */

