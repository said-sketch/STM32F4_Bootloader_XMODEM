#ifndef INC_APP_UART_H_
#define INC_APP_UART_H_

#include "main.h"
#include "stm32f4xx_hal.h"

typedef enum {
    UART_OK = 0,
    UART_ERROR
} uart_status;

// Initialize UART (optional if using HAL init in main)
uart_status UART_Init(UART_HandleTypeDef *huart, uint32_t baudrate);

// Send string over UART
uart_status UART_SendString(UART_HandleTypeDef *huart, uint8_t *str);

// Receive a single byte from UART
uart_status UART_ReceiveByte(UART_HandleTypeDef *huart, uint8_t *data);


#endif /* INC_APP_UART_H_ */
